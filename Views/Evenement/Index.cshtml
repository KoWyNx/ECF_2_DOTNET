@model IEnumerable<EcfDotnet.ViewModel.EvenementViewModel>

@{
    ViewData["Title"] = "Liste des événements";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a href="@Url.Action("Create", "Evenement")" class="btn btn-primary">Créer un nouvel événement</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Nom</th>
        <th>Description</th>
        <th>Date de début</th>
        <th>Date de fin</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var evenement in Model)
    {
        <tr>
            <td>@evenement.Nom</td>
            <td>@evenement.Description</td>
            <td>@evenement.DateDebut?.ToString("dd/MM/yyyy")</td>
            <td>@evenement.DateFin?.ToString("dd/MM/yyyy")</td>
            <td>
                <a href="@Url.Action("Details", "Evenement", new { id = evenement.Primarikey })" class="btn btn-info">Détails</a>
                <a href="@Url.Action("Edit", "Evenement", new { id = evenement.Primarikey })" class="btn btn-warning">Modifier</a>
                <form action="@Url.Action("Delete", "Evenement", new { id = evenement.Primarikey })" method="post" style="display:inline-block;">
                    @Html.AntiForgeryToken()  
                    <input type="hidden" name="_method" value="DELETE" />
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');">Supprimer</button>
                </form>

                <a href="@Url.Action("AjouterParticipant", "Evenement", new { id = evenement.Primarikey })" class="btn btn-success">Ajouter un participant</a>
            </td>
        </tr>
    }
    </tbody>
</table>
