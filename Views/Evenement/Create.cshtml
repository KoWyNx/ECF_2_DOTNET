@model EcfDotnet.ViewModel.EvenementViewModel

@{
    ViewData["Title"] = "Créer un événement";
}

<h1 class="text-center text-primary mb-4">@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-8 offset-md-2">

                <!-- Nom -->
                <div class="form-group mb-3">
                    <label for="Nom" class="form-label fw-bold">Nom</label>
                    <input type="text" class="form-control" id="Nom" name="Nom" required />
                </div>

                <div class="form-group mb-3">
                    <label for="Description" class="form-label fw-bold">Description</label>
                    <input type="text" class="form-control" id="Description" name="Description" required />
                </div>

                <div class="form-group mb-3">
                    <label for="DateDebut" class="form-label fw-bold">Date de début</label>
                    <input type="date" class="form-control" id="DateDebut" name="DateDebut" required />
                </div>

                <div class="form-group mb-3">
                    <label for="DateFin" class="form-label fw-bold">Date de fin</label>
                    <input type="date" class="form-control" id="DateFin" name="DateFin" required />
                </div>

                <div class="form-group mb-3">
                    <label for="Localisation" class="form-label fw-bold">Localisation</label>
                    <input type="text" class="form-control" id="Localisation" name="Localisation" />
                </div>

                <div class="form-group mb-3">
                    <label for="Participants" class="form-label fw-bold">Participant</label>
                    <select class="form-control" id="Participants" name="FkParticipant">
                        <option value="">Sélectionnez un participant</option>
                        @if (Model.Participant != null && Model.Participant.Any())
                        {
                            @foreach (var participant in Model.Participant)
                            {
                                <option value="@participant.Primarikey">@participant.Prenom @participant.Nom</option>
                            }
                        }
                    </select>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Créer l'événement</button>
                    <a href="@Url.Action("Index", "Evenement")" class="btn btn-secondary btn-lg ms-3">Annuler</a>
                </div>

            </div>
        </div>
    </div>
</form>
