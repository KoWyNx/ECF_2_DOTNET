@model EcfDotnet.ViewModel.ParticipantViewModel

<h2>Ajouter un participant</h2>

<form method="post">
    <div class="form-group">
        <label for="Nom">Nom</label>
        <input type="text" class="form-control" id="Nom" name="Nom" value="@Model.Nom" required />
    </div>

    <div class="form-group">
        <label for="Prenom">Prénom</label>
        <input type="text" class="form-control" id="Prenom" name="Prenom" value="@Model.Prenom" required />
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
        @if (ViewData["EmailError"] != null)
        {
            <div class="text-danger">@ViewData["EmailError"]</div>
        }
    </div>

    <div class="form-group">
        <label for="Age">Âge</label>
        <input type="number" class="form-control" id="Age" name="Age" value="@Model.Age" />
    </div>

    <div class="form-group">
        <label for="Telephone">Téléphone</label>
        <input type="text" class="form-control" id="Telephone" name="Telephone" value="@Model.Telephone" />
    </div>
    <input type="hidden" id="FkEvenement" name="FkEvenement" value="@Model.FkEvenement" />

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Ajouter Participant</button>
    </div>
</form>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}
